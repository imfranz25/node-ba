<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs') %> 
<body>
  <%- include('./partials/nav.ejs') %> 
  <h1>Welcome to Hotel Maniac</h1>
  
  <div class="hotel-container">
    <% for (let hotel of hotels) { %> 
      <div class="hotel-box">
        <img src="<%- hotel.image %>" alt="<%- hotel.hotel_name %>" width="100" height="80" />
        <h3><%- hotel.hotel_name %></h3>
        <h5>Uploaded By: <%- hotel.uploader %></h5>
        <h5>Date Posted: <%- hotel.date_posted %></h5>
        <label>Address: <%- hotel.address %></label>
        <p><%- hotel.description.slice(0,10) %>...</p>
        <a href="/hotel/view/<%= hotel._id %> ">View Details</a>
      </div>
    <% } %> 
  </div>
</body>
</html>